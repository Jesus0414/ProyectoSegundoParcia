<Window x:Class="Proyecto2PJesusGastelum.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proyecto2PJesusGastelum"
        mc:Ignorable="d"
        Title="MainWindow" Height="477" Width="801.5">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
            <GradientStop Color="#FFA25404" Offset="0.96"/>
            <GradientStop Color="#FF77E0FF" Offset="0.847"/>
            <GradientStop Color="White" Offset="0.407"/>
            <GradientStop Color="#FF77E0FF"/>
            <GradientStop Color="#FF81E2FF" Offset="0.603"/>
            <GradientStop Color="#FFA4A4A4" Offset="0.89"/>
            <GradientStop Color="#FF7CE1FF" Offset="0.203"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Elige un instrumento:" VerticalAlignment="Top" Margin="35,34,0,0" FontSize="24"/>
        <ComboBox x:Name="cbCategoria" HorizontalAlignment="Left" VerticalAlignment="Top" Width="338" Margin="274,34,0,0" FontSize="20">
            <ComboBoxItem>Piano</ComboBoxItem>
            <ComboBoxItem>Guitarra Eléctrica</ComboBoxItem>
            <ComboBoxItem>Batería</ComboBoxItem>
            <ComboBoxItem>Bajo</ComboBoxItem>
            <ComboBoxItem>Maracas</ComboBoxItem>
            <ComboBoxItem>Violín</ComboBoxItem>
        </ComboBox>
        <Button x:Name="btnAgregar" Content="Agregar" HorizontalAlignment="Left" VerticalAlignment="Top" Width="98" Margin="638,34,0,0" FontSize="22" Click="btnAgregar_Click"/>
        <Grid x:Name="grdProductos" HorizontalAlignment="Left" Height="280" VerticalAlignment="Top" Width="690" Margin="46,108,0,0"/>
        <Button x:Name="btnGuardar" Visibility="Hidden" Content="Guardar" HorizontalAlignment="Left" VerticalAlignment="Top" Width="98" Margin="500,393,0,0" FontSize="22" Click="btnGuardar_Click"/>
        <Button x:Name="btnCancelar" Visibility="Hidden" Content="Cancelar" HorizontalAlignment="Left" VerticalAlignment="Top" Width="98" Margin="638,393,0,0" FontSize="22" Click="btnCancelar_Click"/>
    </Grid>
</Window>
